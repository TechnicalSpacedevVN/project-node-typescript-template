{
  "compilerOptions": {
    "target": "es5",
    "module": "NodeNext",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "paths": {
      "@/*": ["./src/*"],
      "@core/*": ["./src/common/core/*"]
    },
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "noImplicitThis": false,
    "emitDecoratorMetadata": true
  }
}
